<!DOCTYPE html>
<html>
<head>
  <title>DojoReflex</title>
  <!-- jquery -->
  <%= javascript_include_tag 'jquery-1.12.4.min.js' %>
  <%= javascript_include_tag 'jquery-ui.js' %>
  <%= stylesheet_link_tag    'jquery-ui.css' %>

  <!-- jquery-csv -->
  <%= javascript_include_tag 'jquery.csv.js' %>

  <!-- bootstrap -->
  <!-- <%= stylesheet_link_tag    'bootstrap.min.css' %> -->
  <%= stylesheet_link_tag    'bootstrap-theme.min.css' %>

  <!-- application -->
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>


</head>
<% if session[:student_id] or session[:instructor_id] %>
 <nav class="navbar navbar-fixed-top" style="background-color: #3C4C5B;">
      <a class="col-xs-offset-1 navbar-brand" href="#"><%= image_tag 'coding_dojo_white', id: 'brand-logo',  class: 'img-responsive', width: '112', height: '35' %></a>
      <ul class="nav navbar-nav">
        <% if session[:student_id] %><!--student links  -->
            <li><a href="/students/<%= session[:student_id] %>">Home</a></li>
        <% elsif session[:instructor_id] %>

            <% if current_instructor %><!--instructor links  -->
              <li><a href="/instructors/<%= session[:instructor_id] %>">Home</a></li>
           <% end %>
           <% if current_instructor.admin %> <!--admin links  -->

            <% end %>
        <% end %>
      </ul>
      <ul class="col-xs-3 navbar-right nav navbar-nav ">
        <li class="navbar-brand"><%= image_tag 'profile_pic', class: 'profile-img img-responsive img-circle', size:"32" %></li>
        <li>
           <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                  <%if current_student %>
                    <%=current_student.name%>
                  <% else %>
                    <%= current_instructor.name %>
                  <% end %>
               <span class="caret"></span></a>
           <ul class="dropdown-menu">
                <% if session[:student_id] %><!--student links  -->
                     <li><a href='/students/<%=session[:student_id]%>/edit'>Edit</a></li>
                     <li><a href="#">Student 2</a></li>

                 <% elsif session[:instructor_id] %>

                     <% if current_instructor %><!--instructor links  -->
                        <li><a href='/instructors/<%=session[:instructor_id]%>/edit'>Edit</a></li>
                        <li><a href="#">Instructor Option 2</a></li>
                    <% end %>
                    <% if current_instructor.admin %> <!--admin links  -->
                        <li><a href="#">Admin Action 1</a></li>
                        <li><a href="#">Admin Action 2</a></li>

                     <% end %>
                 <% end %>
             <!-- Shared Links  -->
             <li><a href='/logout' data-method='delete'> Logout</a></li>
           </ul>
        </li>
      </ul>
</nav>
<% end %>
<body>

  <%= yield %>
</body>
</html>
